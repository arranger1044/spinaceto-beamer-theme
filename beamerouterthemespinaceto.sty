%
% Frame title customization
\defbeamertemplate*{frametitle}{spinaceto}[1][]
{
  \vskip25pt%
  \insertframetitle\par
  \ifdefined\insertframesubtitle
  \usebeamerfont{framesubtitle}\insertframesubtitle
  \fi
}

\defbeamertemplate*{frametitle}{htt}[2][]
{
  \vskip25pt%
  \htt[#2]{\emph{\insertframetitle}}\par
  \ifdefined\insertframesubtitle
  \usebeamerfont{framesubtitle}\insertframesubtitle
  \fi
}

\BeforeBeginEnvironment{frame}{%
  \setbeamertemplate{frametitle}[spinaceto]%
}

\makeatletter
\define@key{beamerframe}{htt}[lacamdarklilac]{%
  \setbeamertemplate{frametitle}[htt]{#1}%
}
